{
    "compilerOptions": {
      "target": "ES2018", // Set the target to ES2018 or later
      "lib": ["ES2018"], // Include ES2018 or later in the library
      "module": "commonjs",
      "outDir": "out",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }
  